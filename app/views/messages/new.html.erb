<h1>Contact Tyler</h1>

<%= form_for @message, url: create_message_url do |f| %>
  <%= notice %>
  <%= @message.errors.full_messages.join(', ') %>
<div class="field">
  <%= f.label 'Name' %><br>
  <%= f.text_field :name, :class => "field" %>
</div>
<div class="field">
  <%= f.label 'Email' %><br>
  <%= f.email_field :email, :class => "field" %>
</div>
<div class="field">
  <%= f.label 'Message' %><br>
  <%= f.text_area :body %>
</div>
  <%= f.submit 'Send', :class => "actions"  %>
<% end %>
