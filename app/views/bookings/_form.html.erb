<div class="center">
<%= form_for @booking do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% @booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label 'Name' %><br>
    <%= f.text_field :booker_name %>
  </div>
  <div class="field">
    <%= f.label 'Email' %><br>
    <%= f.text_field :booker_email %>
  </div>
  <div class="field">
    <%= f.label 'Phone Number' %><br>
    <%= f.text_field :booker_phonenumber %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :event_start %><br>
    <%= f.datetime_select :event_start, ampm: true %>
  </div>
  <div class="field">
    <%= f.label :event_end %><br>
    <%= f.datetime_select :event_end, ampm: true %>
  </div>

  <% if user_signed_in? %>
    <div class="field">
      <%= f.label :accept %><br>
      <%= f.check_box :accept %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
