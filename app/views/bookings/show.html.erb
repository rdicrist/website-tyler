<div class="margin">
<h1>
  <%= @booking.title %>
</h1>

<h2>
  <%= @booking.description %>
</h2>

<p>
  <strong>Start time:</strong>
  <%= @booking.event_start.strftime('%m/%d/%Y at %I:%M %p') %>
</p>

<p>
  <strong>End time:</strong>
  <%= @booking.event_end.strftime('%m/%d/%Y at %I:%M %p') %>
</p>

<p>
  <strong>Booker Name:</strong>
  <%= @booking.booker_name %>
</p>

<p>
  <strong>Booker Email:</strong>
  <%= @booking.booker_email %>
</p>

<p>
  <strong>Booker Phone Number:</strong>
  <%= @booking.booker_phonenumber %>
</p>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_booking_path(@booking) %>
  <td><%= link_to 'Destroy', @booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>

  <button onclick="location.href='/'" class="back-button">Home</button>
